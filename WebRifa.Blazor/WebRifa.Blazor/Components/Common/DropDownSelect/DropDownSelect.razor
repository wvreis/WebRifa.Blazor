@typeparam TItem

<div class="dropdown d-block"
        @onfocusin="@ShowItems"
        @onfocusout="@HideItems">

    <input type="text"
           placeholder="@Placeholder"
           id="myInput"
           @bind=SelectedItemValue
           @oninput="@OnInputKeyUp">

    <div id="myDropdown"
         class="dropdown-content @GetShowldShowItemsCSSClass()">

        @foreach (var item in GetFilteredList()) {
            <a @onclick="@(() => OnClickItem(item))">@GetPropValue(item)</a>
        }
    </div>
</div>